{
    "compilerOptions": {
        "allowJs": true,
        "pretty": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [ "es5", "dom", "es6", "es7"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "build/scripts",
        "rootDir": "src",
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}