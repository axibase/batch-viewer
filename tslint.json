{
	"exclude": ["*.js"],
	"defaultSeverity": "warning",
	"extends": [ "tslint:recommended", "tslint-react" ],
	"rules": {
		"class-name": true,
		"curly": true,
		"interface-name": ["never-prefix"],
		"jsx-alignment": true,
		"jsx-boolean-value": ["never"],
		"jsx-wrap-multiline": true,
		"member-ordering": [true, { "order": "instance-sandwich" }],
		"no-duplicate-variable": true,
		"no-unused-expression": true,
		"no-unused-variable": true,
		"object-literal-sort-keys": true,
		"ordered-imports": true,
		"prefer-const" : true,
		"semicolon": ["always"],
		"trailing-comma": [ true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"singleline": {
					"objects": "never",
					"arrays": "never",
					"functions": "never",
					"typeLiterals": "ignore"
				}
			}
		],
		"triple-equals": true
	}
}